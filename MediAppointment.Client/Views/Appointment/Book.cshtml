@model MediAppointment.Client.Models.Appointment.PatientBookingViewModel
@{
    ViewData["Title"] = "Đặt lịch khám bệnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var weekDates = new List<DateTime>();
    if (Model.Year > 0 && Model.Week > 0)
    {
        var jan1 = new DateTime(Model.Year, 1, 1);
        var daysOffset = (int)DayOfWeek.Monday - (int)jan1.DayOfWeek;
        var firstMonday = jan1.AddDays(daysOffset);
        var startOfWeek = firstMonday.AddDays((Model.Week - 1) * 7);
        weekDates = Enumerable.Range(0, 7).Select(i => startOfWeek.AddDays(i)).ToList();
    }
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-calendar-plus"></i> Đặt lịch khám bệnh</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Filters -->
                    <form id="filterForm" method="get">
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <label class="form-label">Khoa khám <span class="text-danger">*</span></label>
                                <select name="departmentId" id="departmentSelect" class="form-select" required>
                                    <option value="">-- Chọn khoa --</option>
                                    @foreach (var dept in Model.Departments)
                                    {
                                        <option value="@dept.Id" selected="@(Model.DepartmentId == dept.Id ? "selected" : null)">
                                            @dept.Name
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Năm <span class="text-danger">*</span></label>
                                <select name="year" id="yearSelect" class="form-select" required>
                                    <option value="">-- Chọn năm --</option>
                                    @foreach (var year in Model.AvailableYears)
                                    {
                                        <option value="@year" selected="@(Model.Year == year ? "selected" : null)">
                                            @year
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Tuần <span class="text-danger">*</span></label>
                                <select name="week" id="weekSelect" class="form-select" required>
                                    <option value="">-- Chọn tuần --</option>
                                    @foreach (var week in Model.AvailableWeeks)
                                    {
                                        <option value="@week" selected="@(Model.Week == week ? "selected" : null)">
                                            Tuần @week
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <div>
                                    <button type="submit" class="btn btn-outline-primary">
                                        <i class="bi bi-search"></i> Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                    @if (weekDates.Any())
                    {
                        <!-- Weekly Schedule Table -->
                        <div class="table-responsive">
                            <table class="table table-bordered text-center">
                                <thead class="table-primary">
                                    <tr>
                                        <th style="width: 120px;">Khung giờ</th>
                                        @foreach (var date in weekDates)
                                        {
                                            <th>
                                                <div>@date.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"))</div>
                                                <div class="fw-normal">@date.ToString("dd/MM")</div>
                                            </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Morning slots -->
                                    <tr class="table-light">
                                        <td class="fw-bold bg-light">Ca sáng<br><small>07:00 - 11:00</small></td>
                                        @foreach (var date in weekDates)
                                        {
                                            <td>
                                                @if (Model.WeeklyTimeSlots.TryGetValue(date.Date, out var morningSlots))
                                                {
                                                    var morning = morningSlots.Where(s => s.TimeRange.StartsWith("07:") || s.TimeRange.StartsWith("08:") || s.TimeRange.StartsWith("09:") || s.TimeRange.StartsWith("10:"));
                                                    @foreach (var slot in morning)
                                                    {
                                                        <div class="mb-2">
                                                            <button type="button" 
                                                                    class="btn btn-sm appointment-slot @(slot.IsAvailable ? "btn-outline-success" : "btn-secondary")" 
                                                                    data-slot-id="@slot.Id"
                                                                    data-date="@date.ToString("yyyy-MM-dd")"
                                                                    data-time="@slot.TimeRange"
                                                                    data-doctor="@slot.DoctorName"
                                                                    data-room="@slot.RoomName"
                                                                    @(slot.IsAvailable ? "" : "disabled")>
                                                                @slot.TimeRange
                                                            </button>
                                                            @if (slot.IsAvailable)
                                                            {
                                                                <div class="small text-muted">
                                                                    BS. @slot.DoctorName<br>
                                                                    @slot.RoomName
                                                                </div>
                                                            }
                                                        </div>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Không có lịch</span>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    
                                    <!-- Afternoon slots -->
                                    <tr class="table-light">
                                        <td class="fw-bold bg-light">Ca chiều<br><small>13:00 - 17:00</small></td>
                                        @foreach (var date in weekDates)
                                        {
                                            <td>
                                                @if (Model.WeeklyTimeSlots.TryGetValue(date.Date, out var afternoonSlots))
                                                {
                                                    var afternoon = afternoonSlots.Where(s => s.TimeRange.StartsWith("13:") || s.TimeRange.StartsWith("14:") || s.TimeRange.StartsWith("15:") || s.TimeRange.StartsWith("16:"));
                                                    @foreach (var slot in afternoon)
                                                    {
                                                        <div class="mb-2">
                                                            <button type="button" 
                                                                    class="btn btn-sm appointment-slot @(slot.IsAvailable ? "btn-outline-success" : "btn-secondary")" 
                                                                    data-slot-id="@slot.Id"
                                                                    data-date="@date.ToString("yyyy-MM-dd")"
                                                                    data-time="@slot.TimeRange"
                                                                    data-doctor="@slot.DoctorName"
                                                                    data-room="@slot.RoomName"
                                                                    @(slot.IsAvailable ? "" : "disabled")>
                                                                @slot.TimeRange
                                                            </button>
                                                            @if (slot.IsAvailable)
                                                            {
                                                                <div class="small text-muted">
                                                                    BS. @slot.DoctorName<br>
                                                                    @slot.RoomName
                                                                </div>
                                                            }
                                                        </div>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Không có lịch</span>
                                                }
                                            </td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x display-1 text-muted"></i>
                            <h5 class="text-muted mt-3">Vui lòng chọn khoa, năm và tuần để xem lịch khám</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Booking Confirmation Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận đặt lịch</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="bookingForm" asp-action="Book" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <h6><i class="bi bi-info-circle"></i> Thông tin lịch hẹn</h6>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Ngày khám:</strong><br>
                                            <span id="selectedDate"></span>
                                        </div>
                                        <div class="col-6">
                                            <strong>Giờ khám:</strong><br>
                                            <span id="selectedTime"></span>
                                        </div>
                                        <div class="col-6 mt-2">
                                            <strong>Bác sĩ:</strong><br>
                                            <span id="selectedDoctor"></span>
                                        </div>
                                        <div class="col-6 mt-2">
                                            <strong>Phòng:</strong><br>
                                            <span id="selectedRoom"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <input type="hidden" name="TimeSlotId" id="hiddenTimeSlotId" />
                    <input type="hidden" name="Date" id="hiddenDate" />
                    <input type="hidden" name="DepartmentId" id="hiddenDepartmentId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Xác nhận đặt lịch</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto submit form when filters change
            $('#departmentSelect, #yearSelect, #weekSelect').change(function() {
                $('#filterForm').submit();
            });

            // Handle appointment slot selection
            $('.appointment-slot').click(function() {
                if ($(this).prop('disabled')) return;
                
                const slotId = $(this).data('slot-id');
                const date = $(this).data('date');
                const time = $(this).data('time');
                const doctor = $(this).data('doctor');
                const room = $(this).data('room');
                const departmentId = $('#departmentSelect').val();
                
                // Update modal content
                $('#selectedDate').text(new Date(date).toLocaleDateString('vi-VN'));
                $('#selectedTime').text(time);
                $('#selectedDoctor').text(doctor);
                $('#selectedRoom').text(room);
                
                // Update hidden form fields
                $('#hiddenTimeSlotId').val(slotId);
                $('#hiddenDate').val(date);
                $('#hiddenDepartmentId').val(departmentId);
                
                // Show modal
                $('#bookingModal').modal('show');
            });

            // Handle form submission
            $('#bookingForm').submit(function(e) {
                e.preventDefault();
                
                const formData = {
                    TimeSlotId: $('#hiddenTimeSlotId').val(),
                    Date: $('#hiddenDate').val(),
                    DepartmentId: $('#hiddenDepartmentId').val()
                };
                
                $.ajax({
                    url: '@Url.Action("Book", "Appointment")',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        $('#bookingModal').modal('hide');
                        alert('Đặt lịch thành công!');
                        location.reload();
                    },
                    error: function(xhr) {
                        alert('Có lỗi xảy ra: ' + (xhr.responseJSON?.message || 'Vui lòng thử lại'));
                    }
                });
            });
        });
    </script>
}
