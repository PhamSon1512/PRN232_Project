@model List<MediAppointment.Client.Models.Appointment.AppointmentViewModel>
@{
    ViewData["Title"] = "Lịch hẹn của tôi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar-alt me-2"></i>Lịch hẹn của tôi</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Đặt lịch mới
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var appointment in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <span class="fw-bold">
                            <i class="fas fa-calendar me-1"></i>
                            @appointment.AppointmentDate.ToString("dd/MM/yyyy HH:mm")
                        </span>
                        <span class="@appointment.StatusClass">@appointment.StatusDisplay</span>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-user-md me-1"></i>@appointment.DoctorName
                        </h6>
                        <p class="card-text">
                            <i class="fas fa-building me-1"></i>@appointment.Department<br>
                            <i class="fas fa-door-open me-1"></i>@appointment.RoomName<br>
                            <i class="fas fa-clock me-1"></i>@appointment.TimeSlot
                        </p>
                        @if (!string.IsNullOrEmpty(appointment.Note))
                        {
                            <p class="card-text text-muted">
                                <i class="fas fa-sticky-note me-1"></i>@appointment.Note
                            </p>
                        }
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>Chi tiết
                            </a>
                            @if (appointment.Status == "Scheduled" || appointment.Status == "Pending")
                            {
                                <form asp-action="Cancel" asp-route-id="@appointment.Id" method="post" class="d-inline" 
                                      onsubmit="return confirm('Bạn có chắc chắn muốn hủy lịch hẹn này?')">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-times me-1"></i>Hủy
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination could be added here -->
    <nav aria-label="Appointment pagination" class="mt-4">
        <!-- Pagination controls -->
    </nav>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-calendar-times text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">Bạn chưa có lịch hẹn nào</h4>
        <p class="text-muted">Đặt lịch hẹn đầu tiên của bạn ngay bây giờ!</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Đặt lịch ngay
        </a>
    </div>
}
