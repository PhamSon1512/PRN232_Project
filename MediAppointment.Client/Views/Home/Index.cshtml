<!-- Hero Section with Banner Carousel - Modern Professional Design -->
<style>
    .hero-section {
        position: relative;
        overflow: hidden;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        margin-right: calc(-50vw + 50%);
        max-width: none;
        margin-top: 0;
        padding-top: 0;
    }

    .hero-bg-pattern {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100vw;
        height: 100vh;
        background-image: 
            radial-gradient(circle at 25% 25%, rgba(255,255,255,0.1) 2px, transparent 2px),
            radial-gradient(circle at 75% 75%, rgba(255,255,255,0.1) 2px, transparent 2px);
        background-size: 60px 60px;
        animation: float 20s ease-in-out infinite;
        z-index: 0;
    }

    /* Đảm bảo carousel hoạt động đúng */
    #heroCarousel {
        z-index: 1;
        width: 100vw;
        max-width: none;
    }

    .carousel-inner {
        z-index: 1;
        width: 100vw;
        max-width: none;
    }

    /* Fix carousel item display */
    .carousel-item {
        transition: transform 0.6s ease-in-out;
    }

    .carousel-item.active {
        z-index: 2;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    .carousel-item {
        position: relative;
        min-height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
    }

    .carousel-item img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        object-position: center;
        filter: brightness(0.4) blur(0.5px);
        transition: all 0.8s ease;
        z-index: 1;
    }

    .carousel-item:hover img {
        filter: brightness(0.5) blur(0px);
    }

    .carousel-content {
        position: relative;
        z-index: 20;
        width: 100%;
        padding: 4rem 0;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        color: #fff;
        text-shadow: 0 4px 8px rgba(0,0,0,0.5);
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        color: rgba(255,255,255,0.95);
        font-weight: 400;
        margin-bottom: 2rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }

    .hero-highlight {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: rgba(255,255,255,0.1);
        border-radius: 50px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.2);
        margin-top: 1rem;
    }

    .hero-buttons {
        margin-top: 2.5rem;
    }

    /* Slide-specific animations - Cải thiện để tránh chồng chéo */
    .carousel-item.active .hero-title,
    .carousel-item.active .hero-subtitle,
    .carousel-item.active .hero-highlight,
    .carousel-item.active .hero-icon {
        opacity: 1;
        transform: translateY(0);
        animation: slideInUp 0.8s ease-out forwards;
    }

    /* Buttons animation riêng để không ảnh hưởng tới click */
    .carousel-item.active .hero-buttons {
        opacity: 1 !important;
        transform: translateY(0) !important;
        animation: none !important;
        pointer-events: auto !important;
        z-index: 9999 !important;
    }

    .carousel-item:not(.active) .hero-buttons {
        opacity: 0;
        transform: translateY(50px);
        animation: none;
        pointer-events: none;
    }

    /* Override tất cả animations có thể conflict */
    .hero-buttons *,
    .hero-buttons a,
    .btn-hero-primary,
    .btn-hero-secondary {
        animation: none !important;
        transform: none !important;
        transition: all 0.3s ease !important;
    }

    .carousel-item.active .hero-subtitle {
        animation-delay: 0.2s;
    }

    .carousel-item.active .hero-highlight {
        animation-delay: 0.4s;
    }

    /* Reset cho slide không active - quan trọng để tránh chồng chéo */
    .carousel-item:not(.active) .hero-title,
    .carousel-item:not(.active) .hero-subtitle,
    .carousel-item:not(.active) .hero-highlight,
    .carousel-item:not(.active) .hero-icon {
        opacity: 0;
        transform: translateY(50px);
        animation: none;
    }

    .carousel-item:not(.active) .hero-buttons {
        opacity: 0;
        transform: translateY(50px);
        animation: none;
        pointer-events: none;
    }

    .btn-hero-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none !important;
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 50px;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        transition: all 0.3s ease;
        position: relative !important;
        overflow: hidden;
        color: white !important;
        text-decoration: none !important;
        display: inline-block !important;
        z-index: 9999 !important;
        pointer-events: auto !important;
        cursor: pointer !important;
        animation: none !important;
        transform: none !important;
    }

    .btn-hero-primary:before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
        z-index: -1;
        pointer-events: none;
    }

    .btn-hero-primary:hover:before {
        left: 100%;
    }

    .btn-hero-primary:hover,
    .btn-hero-primary:focus,
    .btn-hero-primary:active,
    .btn-hero-primary:visited {
        transform: translateY(-2px) !important;
        box-shadow: 0 12px 35px rgba(102, 126, 234, 0.6) !important;
        color: white !important;
        text-decoration: none !important;
        animation: none !important;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }

    .btn-hero-secondary {
        background: rgba(255,255,255,0.15) !important;
        border: 2px solid rgba(255,255,255,0.3) !important;
        color: white !important;
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 50px;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        text-decoration: none !important;
        display: inline-block !important;
        z-index: 9999 !important;
        pointer-events: auto !important;
        cursor: pointer !important;
        animation: none !important;
        transform: none !important;
        position: relative !important;
    }

    .btn-hero-secondary:hover,
    .btn-hero-secondary:focus,
    .btn-hero-secondary:active,
    .btn-hero-secondary:visited {
        background: rgba(255,255,255,0.25) !important;
        border-color: rgba(255,255,255,0.5) !important;
        transform: translateY(-2px) !important;
        box-shadow: 0 8px 25px rgba(255,255,255,0.2) !important;
        color: white !important;
        text-decoration: none !important;
        animation: none !important;
    }

    .hero-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));
    }

    .carousel-item.active .hero-icon {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .carousel-indicators {
        bottom: 2rem;
        margin-bottom: 0;
        z-index: 200;
    }

    .carousel-indicators [data-bs-target] {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: rgba(255,255,255,0.5);
        border: 2px solid rgba(255,255,255,0.8);
        transition: all 0.3s ease;
        z-index: 200;
        pointer-events: auto;
        cursor: pointer;
    }

    .carousel-indicators .active {
        background-color: #fff;
        transform: scale(1.2);
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
        opacity: 0.8;
        transition: opacity 0.3s ease;
        z-index: 1500;
        pointer-events: auto;
        cursor: pointer;
    }

    .carousel-control-prev:hover,
    .carousel-control-next:hover {
        opacity: 1;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-size: 30px 30px;
        filter: drop-shadow(0 2px 4px rgba(0,0,0,0.7));
        width: 50px;
        height: 50px;
    }

    .hero-buttons {
        margin-top: 2.5rem;
        z-index: 9999 !important;
        position: relative !important;
        pointer-events: auto !important;
    }

    .hero-buttons .d-flex {
        z-index: 9999 !important;
        position: relative !important;
        pointer-events: auto !important;
    }

    .hero-buttons a {
        z-index: 9999 !important;
        position: relative !important;
        pointer-events: auto !important;
    }

    /* Đảm bảo buttons có thể click được ngay cả khi đang animation */
    .carousel-item .hero-buttons,
    .carousel-item.active .hero-buttons {
        pointer-events: auto !important;
        z-index: 9999 !important;
    }

    .carousel-item .hero-buttons a,
    .carousel-item.active .hero-buttons a {
        pointer-events: auto !important;
        z-index: 9999 !important;
        position: relative !important;
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .hero-section {
            min-height: 80vh;
            width: 100vw;
            margin-left: calc(-50vw + 50%);
            margin-right: calc(-50vw + 50%);
        }
        
        .carousel-item {
            min-height: 80vh;
            width: 100vw;
        }
        
        .carousel-item img {
            width: 100vw;
            height: 80vh;
        }
        
        .hero-title {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
        
        .hero-subtitle {
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
        }
        
        .hero-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        
        .btn-hero-primary,
        .btn-hero-secondary {
            padding: 0.8rem 2rem;
            font-size: 1rem;
            margin: 0.5rem;
            z-index: 9999 !important;
            pointer-events: auto !important;
            animation: none !important;
            transform: none !important;
        }
        
        .carousel-content {
            padding: 2rem 0;
        }
    }

    @@media (max-width: 576px) {
        .hero-section {
            width: 100vw;
            margin-left: calc(-50vw + 50%);
            margin-right: calc(-50vw + 50%);
        }
        
        .carousel-item {
            width: 100vw;
        }
        
        .carousel-item img {
            width: 100vw;
        }
        
        .hero-title {
            font-size: 2rem;
        }
        
        .hero-subtitle {
            font-size: 1rem;
        }
        
        .btn-hero-primary,
        .btn-hero-secondary {
            padding: 0.7rem 1.5rem;
            font-size: 0.9rem;
            display: block;
            width: 100%;
            margin: 0.5rem 0;
            z-index: 9999 !important;
            pointer-events: auto !important;
            animation: none !important;
            transform: none !important;
        }
    }
</style>
