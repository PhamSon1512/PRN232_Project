@model MediAppointment.Client.Models.Doctor.DoctorViewModel
@{
    ViewData["Title"] = $"Bác sĩ {Model.FullName}";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <div class="d-flex align-items-center">
                    <div class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center me-3" 
                         style="width: 60px; height: 60px;">
                        <i class="fas fa-user-md text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h3 class="mb-0">@Model.FullName</h3>
                        <p class="mb-0 opacity-75">Bác sĩ chuyên khoa</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-info-circle me-2"></i>Thông tin cá nhân
                        </h5>
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold" style="width: 40%;"><i class="fas fa-user me-1"></i>Họ và tên:</td>
                                <td>@Model.FullName</td>
                            </tr>
                            <tr>
                                <td class="fw-bold"><i class="fas fa-venus-mars me-1"></i>Giới tính:</td>
                                <td>@Model.GenderDisplay</td>
                            </tr>
                            <tr>
                                <td class="fw-bold"><i class="fas fa-birthday-cake me-1"></i>Ngày sinh:</td>
                                <td>@Model.DateOfBirth.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <td class="fw-bold"><i class="fas fa-envelope me-1"></i>Email:</td>
                                <td>
                                    <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="fw-bold"><i class="fas fa-phone me-1"></i>Điện thoại:</td>
                                <td>
                                    <a href="tel:@Model.PhoneNumber" class="text-decoration-none">@Model.PhoneNumber</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-building me-2"></i>Chuyên khoa
                        </h5>
                        @if (Model.Departments.Any())
                        {
                            <div class="mb-4">
                                @foreach (var dept in Model.Departments)
                                {
                                    <span class="badge bg-primary me-2 mb-2 p-2">
                                        <i class="fas fa-stethoscope me-1"></i>@dept
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Chưa có thông tin chuyên khoa</p>
                        }

                        <h5 class="text-primary mb-3 mt-4">
                            <i class="fas fa-star me-2"></i>Đánh giá
                        </h5>
                        <div class="d-flex align-items-center mb-2">
                            <div class="text-warning me-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                            </div>
                            <span class="text-muted">(4.5/5 - 127 đánh giá)</span>
                        </div>
                    </div>
                </div>

                @if (Model.Schedules.Any())
                {
                    <div class="mt-4">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-calendar-alt me-2"></i>Lịch làm việc
                        </h5>
                        <div class="row">
                            @foreach (var schedule in Model.Schedules.Take(7))
                            {
                                <div class="col-md-4 col-sm-6 mb-2">
                                    <div class="card @(schedule.IsAvailable ? "border-success" : "border-secondary")">
                                        <div class="card-body py-2 px-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <div class="fw-bold">@schedule.Date.ToString("dd/MM")</div>
                                                    <small class="text-muted">@schedule.Date.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"))</small>
                                                </div>
                                                <div class="text-end">
                                                    <div class="small">@schedule.Shift</div>
                                                    @if (schedule.IsAvailable)
                                                    {
                                                        <span class="badge bg-success">Có sẵn</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Đã đầy</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="mt-4">
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-graduation-cap me-2"></i>Kinh nghiệm & Chứng chỉ
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Bằng cử nhân Y khoa - Đại học Y Hà Nội
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Chứng chỉ chuyên khoa cấp I
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    5+ năm kinh nghiệm
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Chứng chỉ hành nghề Y khoa
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Thành viên Hội Y học Việt Nam
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Tham gia nhiều hội thảo chuyên môn
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                    </a>
                    <div>
                        <a asp-controller="Appointment" asp-action="Create" asp-route-doctorId="@Model.Id" 
                           class="btn btn-primary">
                            <i class="fas fa-calendar-plus me-1"></i>Đặt lịch khám
                        </a>
                        <button class="btn btn-outline-primary ms-2" data-bs-toggle="modal" data-bs-target="#contactModal">
                            <i class="fas fa-phone me-1"></i>Liên hệ
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contactModalLabel">
                    <i class="fas fa-phone me-2"></i>Liên hệ bác sĩ @Model.FullName
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <strong><i class="fas fa-phone me-2"></i>Điện thoại:</strong>
                    <a href="tel:@Model.PhoneNumber" class="ms-2">@Model.PhoneNumber</a>
                </div>
                <div class="mb-3">
                    <strong><i class="fas fa-envelope me-2"></i>Email:</strong>
                    <a href="mailto:@Model.Email" class="ms-2">@Model.Email</a>
                </div>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Lưu ý:</strong> Để đảm bảo thời gian khám tốt nhất, 
                    vui lòng đặt lịch hẹn trước thay vì liên hệ trực tiếp.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <a asp-controller="Appointment" asp-action="Create" asp-route-doctorId="@Model.Id" 
                   class="btn btn-primary">
                    <i class="fas fa-calendar-plus me-1"></i>Đặt lịch ngay
                </a>
            </div>
        </div>
    </div>
</div>
