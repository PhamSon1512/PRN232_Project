@model MediAppointment.Client.Models.Doctor.DoctorViewModel
@{
    ViewData["Title"] = $"Bác sĩ {Model.FullName}";
}

<style>
    .profile-page-container {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }
    
    .profile-header-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 20px;
        margin-bottom: 2rem;
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
    }
    
    .profile-header-card::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 200px;
        height: 200px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
    }
    
    .profile-header-card::after {
        content: '';
        position: absolute;
        bottom: -30%;
        left: -10%;
        width: 150px;
        height: 150px;
        background: rgba(255,255,255,0.08);
        border-radius: 50%;
    }
    
    .doctor-avatar-large {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        border: 4px solid white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
    }
    
    .doctor-avatar-large:hover {
        transform: scale(1.05);
        box-shadow: 0 15px 40px rgba(0,0,0,0.3);
    }
    
    .info-card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        margin-bottom: 2rem;
        overflow: hidden;
        position: relative;
        border-left: 5px solid #667eea;
    }
    
    .info-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }
    
    .info-card::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        border-radius: 50%;
        transform: translate(50%, -50%);
    }
    
    .info-table {
        background: transparent;
    }
    
    .info-table td {
        padding: 1rem 0;
        border: none;
        vertical-align: middle;
    }
    
    .info-table td:first-child {
        color: #495057;
        font-weight: 600;
        width: 40%;
    }
    
    .info-table td:last-child {
        color: #2c3e50;
        font-weight: 500;
    }
    
    .info-table tr {
        border-bottom: 1px solid #e9ecef;
    }
    
    .info-table tr:last-child {
        border-bottom: none;
    }
    
    .section-title {
        color: #667eea;
        font-weight: 700;
        margin-bottom: 1.5rem;
        position: relative;
        padding-left: 2rem;
    }
    
    .section-title::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 30px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 2px;
    }
    
    .department-badge-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 25px;
        padding: 0.6rem 1.2rem;
        font-size: 0.9rem;
        font-weight: 500;
        margin: 0.3rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }
    
    .department-badge-custom:hover {
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
    }
    
    .schedule-card-custom {
        border: none;
        border-radius: 15px;
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        margin-bottom: 1rem;
    }
    
    .schedule-card-custom:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .schedule-available {
        border-left: 4px solid #28a745;
    }
    
    .schedule-unavailable {
        border-left: 4px solid #6c757d;
    }
    
    .experience-list {
        list-style: none;
        padding: 0;
    }
    
    .experience-item {
        background: linear-gradient(135deg, #e8f5e8 0%, #f0f8f0 100%);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1rem;
        border-left: 4px solid #28a745;
        transition: all 0.3s ease;
        position: relative;
    }
    
    .experience-item:hover {
        transform: translateX(5px);
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);
    }
    
    .experience-item::before {
        content: '';
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        width: 30px;
        height: 30px;
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(40, 167, 69, 0.2) 100%);
        border-radius: 50%;
    }
    
    .action-buttons {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        border: 1px solid #e9ecef;
    }
    
    .btn-custom-profile {
        border-radius: 25px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 150px;
    }
    
    .btn-custom-profile:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }
    
    .btn-secondary-custom {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
        color: white;
        border: none;
    }
    
    .btn-secondary-custom:hover {
        background: linear-gradient(135deg, #5a6268 0%, #3d4142 100%);
        color: white;
    }
    
    .btn-primary-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
    }
    
    .btn-primary-custom:hover {
        background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
        color: white;
    }
    
    .btn-outline-custom {
        background: transparent;
        color: #667eea;
        border-color: #667eea;
    }
    
    .btn-outline-custom:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
    }
    
    .modal-content-custom {
        border-radius: 20px;
        border: none;
        box-shadow: 0 15px 35px rgba(0,0,0,0.3);
    }
    
    .modal-header-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 20px 20px 0 0;
        border-bottom: none;
    }
    
    .contact-info-modal {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1rem;
        border-left: 3px solid #667eea;
    }
    
    @@media (max-width: 768px) {
        .profile-page-container {
            padding: 1rem;
        }
        
        .doctor-avatar-large {
            width: 100px;
            height: 100px;
        }
        
        .section-title {
            font-size: 1.2rem;
            padding-left: 1.5rem;
        }
        
        .btn-custom-profile {
            min-width: 120px;
            padding: 0.6rem 1.5rem;
        }
    }
</style>

<div class="profile-page-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Profile Header -->
            <div class="profile-header-card">
                <div class="card-body p-4 position-relative">
                    <div class="row align-items-center">
                        <div class="col-md-3 text-center">
                            <div class="doctor-avatar-large mx-auto">
                                <i class="fas fa-user-md text-primary" style="font-size: 3rem;"></i>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <h1 class="mb-3 fw-bold">@Model.FullName</h1>
                            <p class="mb-2 opacity-75 lead">
                                <i class="fas fa-user-md me-2"></i>Bác sĩ chuyên khoa
                            </p>
                            <div class="d-flex flex-wrap align-items-center">
                                <span class="badge bg-light text-dark me-3 mb-2 px-3 py-2">
                                    <i class="fas fa-venus-mars me-1"></i>@Model.GenderDisplay
                                </span>
                                <span class="badge bg-light text-dark me-3 mb-2 px-3 py-2">
                                    <i class="fas fa-birthday-cake me-1"></i>@Model.DateOfBirth.ToString("dd/MM/yyyy")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Personal Information and Specialties -->
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="info-card">
                        <div class="card-body p-4">
                            <h5 class="section-title">
                                <i class="fas fa-info-circle me-2"></i>Thông tin liên hệ
                            </h5>
                            <table class="table info-table">
                                <tr>
                                    <td><i class="fas fa-envelope me-2 text-primary"></i>Email:</td>
                                    <td>
                                        <a href="mailto:@Model.Email" class="text-decoration-none text-primary fw-bold">@Model.Email</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-phone me-2 text-success"></i>Điện thoại:</td>
                                    <td>
                                        <a href="tel:@Model.PhoneNumber" class="text-decoration-none text-success fw-bold">@Model.PhoneNumber</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6 mb-4">
                    <div class="info-card">
                        <div class="card-body p-4">
                            <h5 class="section-title">
                                <i class="fas fa-stethoscope me-2"></i>Chuyên khoa
                            </h5>
                            @if (Model.Departments.Any())
                            {
                                <div class="mb-3">
                                    @foreach (var dept in Model.Departments)
                                    {
                                        <span class="badge department-badge-custom">
                                            <i class="fas fa-hospital me-2"></i>@dept
                                        </span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">Chưa có thông tin chuyên khoa</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Work Schedule -->
            @if (Model.Schedules.Any())
            {
                <div class="info-card mb-4">
                    <div class="card-body p-4">
                        <h5 class="section-title">
                            <i class="fas fa-calendar-alt me-2"></i>Lịch làm việc
                        </h5>
                        <div class="row">
                            @foreach (var schedule in Model.Schedules.Take(6))
                            {
                                <div class="col-lg-4 col-md-6 mb-3">
                                    <div class="card schedule-card-custom @(schedule.IsAvailable ? "schedule-available" : "schedule-unavailable")">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <div class="fw-bold text-primary fs-5">@schedule.Date.ToString("dd/MM")</div>
                                                    <small class="text-muted">@schedule.Date.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"))</small>
                                                </div>
                                                <div class="text-end">
                                                    <div class="small fw-bold mb-1">@schedule.Shift</div>
                                                    @if (schedule.IsAvailable)
                                                    {
                                                        <span class="badge bg-success px-3 py-2">
                                                            <i class="fas fa-check me-1"></i>Có sẵn
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary px-3 py-2">
                                                            <i class="fas fa-times me-1"></i>Đã đầy
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Experience & Certificates -->
            <div class="info-card mb-4">
                <div class="card-body p-4">
                    <h5 class="section-title">
                        <i class="fas fa-graduation-cap me-2"></i>Kinh nghiệm & Chứng chỉ
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="experience-list">
                                <li class="experience-item">
                                    <i class="fas fa-university text-success me-3"></i>
                                    <strong>Bằng cử nhân Y khoa</strong><br>
                                    <small class="text-muted">Đại học Y Hà Nội</small>
                                </li>
                                <li class="experience-item">
                                    <i class="fas fa-certificate text-success me-3"></i>
                                    <strong>Chứng chỉ chuyên khoa cấp I</strong><br>
                                    <small class="text-muted">Được cấp bởi Bộ Y tế</small>
                                </li>
                                <li class="experience-item">
                                    <i class="fas fa-clock text-success me-3"></i>
                                    <strong>5+ năm kinh nghiệm</strong><br>
                                    <small class="text-muted">Thực hành lâm sàng</small>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="experience-list">
                                <li class="experience-item">
                                    <i class="fas fa-id-card text-success me-3"></i>
                                    <strong>Chứng chỉ hành nghề Y khoa</strong><br>
                                    <small class="text-muted">Còn hiệu lực</small>
                                </li>
                                <li class="experience-item">
                                    <i class="fas fa-users text-success me-3"></i>
                                    <strong>Hội Y học Việt Nam</strong><br>
                                    <small class="text-muted">Thành viên chính thức</small>
                                </li>
                                <li class="experience-item">
                                    <i class="fas fa-chalkboard-teacher text-success me-3"></i>
                                    <strong>Hội thảo chuyên môn</strong><br>
                                    <small class="text-muted">Tham gia thường xuyên</small>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                    <a asp-action="Index" class="btn btn-secondary-custom btn-custom-profile">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                    </a>
                    <div class="d-flex flex-column flex-sm-row gap-3">
                        <a asp-controller="Appointment" asp-action="Create" asp-route-doctorId="@Model.Id" 
                           class="btn btn-primary-custom btn-custom-profile">
                            <i class="fas fa-calendar-plus me-2"></i>Đặt lịch khám
                        </a>
                        <button class="btn btn-outline-custom btn-custom-profile" data-bs-toggle="modal" data-bs-target="#contactModal">
                            <i class="fas fa-phone me-2"></i>Liên hệ
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modal-content-custom">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title fw-bold" id="contactModalLabel">
                    <i class="fas fa-phone me-2"></i>Liên hệ bác sĩ @Model.FullName
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="contact-info-modal">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary rounded-circle p-3 me-3">
                                    <i class="fas fa-phone text-white"></i>
                                </div>
                                <div>
                                    <strong class="text-muted">Số điện thoại</strong><br>
                                    <a href="tel:@Model.PhoneNumber" class="text-primary fw-bold text-decoration-none h5 mb-0">@Model.PhoneNumber</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="contact-info-modal">
                            <div class="d-flex align-items-center">
                                <div class="bg-success rounded-circle p-3 me-3">
                                    <i class="fas fa-envelope text-white"></i>
                                </div>
                                <div>
                                    <strong class="text-muted">Email</strong><br>
                                    <a href="mailto:@Model.Email" class="text-success fw-bold text-decoration-none h6 mb-0">@Model.Email</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="alert alert-info border-0 shadow-sm" style="background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-info-circle text-info me-3 mt-1"></i>
                        <div>
                            <h6 class="alert-heading fw-bold text-info mb-2">Lưu ý quan trọng</h6>
                            <p class="mb-0 text-info">
                                Để đảm bảo chất lượng dịch vụ tốt nhất và tiết kiệm thời gian của bạn, 
                                chúng tôi khuyến khích bạn đặt lịch hẹn trước thay vì liên hệ trực tiếp.
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4 p-3 rounded" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                    <h6 class="fw-bold text-primary mb-2">
                        <i class="fas fa-clock me-2"></i>Thời gian làm việc
                    </h6>
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="text-muted">Thứ 2 - Thứ 6</div>
                            <div class="fw-bold">8:00 - 17:00</div>
                        </div>
                        <div class="col-6">
                            <div class="text-muted">Thứ 7 - Chủ nhật</div>
                            <div class="fw-bold">8:00 - 12:00</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 p-4">
                <button type="button" class="btn btn-secondary-custom btn-custom-profile" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Đóng
                </button>
                <a asp-controller="Appointment" asp-action="Create" asp-route-doctorId="@Model.Id" 
                   class="btn btn-primary-custom btn-custom-profile">
                    <i class="fas fa-calendar-plus me-2"></i>Đặt lịch ngay
                </a>
            </div>
        </div>
    </div>
</div>
