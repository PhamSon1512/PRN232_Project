@{
    Layout = null;
    var logoTitle = ViewBag.LogoTitle ?? "MediAppointment";
    var menuItems = ViewBag.MenuItems as List<dynamic> ?? new List<dynamic> {
        new { Title = "Tổng quan lịch làm việc", Icon = "bi-calendar3", Controller = "Manager", Action = "ScheduleOverview", Url = "/Manager/ScheduleOverview", Active = (Context.Request.Path == "/Manager/ScheduleOverview" || Context.Request.Path == "/Manager") },
        new { Title = "Quản lý danh sách bác sĩ", Icon = "bi-person-plus", Controller = "Manager", Action = "DoctorManagement", Url = "/Manager/DoctorManagement", Active = (Context.Request.Path == "/Manager/DoctorManagement") }
    };
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @logoTitle</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { background: #f4f7fa; font-family: 'Roboto', sans-serif; }
        .sidebar {
            background: #fff; min-height: 100vh; box-shadow: 2px 0 8px rgba(0,0,0,0.04); width: 250px; position: fixed; left: 0; top: 0; z-index: 100;
        }
        .sidebar .logo { font-size: 1.5rem; font-weight: 700; color: #1976d2; padding: 32px 24px 24px 24px; }
        .sidebar .nav-link { color: #222; font-weight: 500; border-radius: 8px; margin: 8px 16px; }
        .sidebar .nav-link.active, .sidebar .nav-link:hover { background: #e3f0fc; color: #1976d2; }
        .main-content { margin-left: 250px; padding: 32px 40px 32px 40px; }
        .topbar { height: 64px; background: #1976d2; color: #fff; display: flex; align-items: center; padding: 0 40px; }
        .topbar .search { background: #fff; border-radius: 8px; padding: 4px 12px; color: #222; margin-left: 24px; width: 250px; border: none; }
        .topbar .icon { margin-left: auto; margin-right: 16px; font-size: 1.3rem; cursor: pointer; }
        .card { border: none; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); }
        .card-header { background: #1976d2; border-radius: 12px 12px 0 0; }
        .btn-success { background: #1976d2; border-color: #1976d2; }
        .btn-success:hover { background: #1565c0; border-color: #1565c0; }
        .text-success { color: #1976d2 !important; }
        .bg-success { background-color: #1976d2 !important; }
        .border-success { border-color: #1976d2 !important; }
        .btn-outline-success { color: #1976d2; border-color: #1976d2; }
        .btn-outline-success:hover { background: #1976d2; border-color: #1976d2; }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="sidebar d-flex flex-column">
        <div class="logo">@logoTitle</div>
        <nav class="nav flex-column">
            @foreach (var item in menuItems)
            {
                <a class="nav-link @(item.Active ? "active" : "")" href="@item.Url">
                    <i class="bi @item.Icon"></i> @item.Title
                </a>
            }
        </nav>
    </div>
    <div class="main-content">
        <div class="topbar">
            <span style="font-size:1.2rem;font-weight:500;">@ViewData["Title"]</span>
            <div class="dropdown ms-auto">
                <a class="icon dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: #fff;">
                    <i class="bi bi-person-circle"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" asp-controller="Manager" asp-action="ManagerProfile">Xem hồ sơ</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="bi bi-box-arrow-right me-1"></i>Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
        <div class="mt-4">
            @RenderBody()
        </div>
    </div>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
