@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="me-3"><i class="bi bi-currency-dollar fs-2 text-warning"></i></div>
                    <div>
                        <div class="fs-5 fw-bold">$30200</div>
                        <div class="text-muted">All Earnings</div>
                        <div class="text-warning small">10% changes on profit</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="me-3"><i class="bi bi-calendar2-check fs-2 text-danger"></i></div>
                    <div>
                        <div class="fs-5 fw-bold">145</div>
                        <div class="text-muted">Task</div>
                        <div class="text-danger small">28% task performance</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="me-3"><i class="bi bi-file-earmark-bar-graph fs-2 text-success"></i></div>
                    <div>
                        <div class="fs-5 fw-bold">290+</div>
                        <div class="text-muted">Page Views</div>
                        <div class="text-success small">10k daily views</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="me-3"><i class="bi bi-hand-thumbs-up fs-2 text-primary"></i></div>
                    <div>
                        <div class="fs-5 fw-bold">500</div>
                        <div class="text-muted">Downloads</div>
                        <div class="text-primary small">1k download in App store</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row g-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="fw-bold mb-2">Sales Per Day</div>
                <canvas id="salesChart" height="120"></canvas>
                <div class="d-flex justify-content-between mt-3">
                    <div>
                        <div class="fw-bold">$4230</div>
                        <div class="text-muted small">Total Revenue</div>
                    </div>
                    <div>
                        <div class="fw-bold">321</div>
                        <div class="text-muted small">Today Sales</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="fw-bold mb-2">Total Revenue</div>
                <canvas id="revenueChart" height="120"></canvas>
                <div class="d-flex justify-content-between mt-3">
                    <div class="text-danger small">Youtube +16.85%</div>
                    <div class="text-primary small">Facebook +45.36%</div>
                    <div class="text-info small">Twitter -50.69%</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="fw-bold mb-2">Traffic Sources</div>
                <div class="mb-2">Direct <span class="float-end">80%</span></div>
                <div class="progress mb-2" style="height:6px;"><div class="progress-bar bg-primary" style="width:80%"></div></div>
                <div class="mb-2">Social <span class="float-end">50%</span></div>
                <div class="progress mb-2" style="height:6px;"><div class="progress-bar bg-secondary" style="width:50%"></div></div>
                <div class="mb-2">Referral <span class="float-end">20%</span></div>
                <div class="progress mb-2" style="height:6px;"><div class="progress-bar bg-info" style="width:20%"></div></div>
                <div class="mb-2">Bounce <span class="float-end">60%</span></div>
                <div class="progress mb-2" style="height:6px;"><div class="progress-bar bg-warning" style="width:60%"></div></div>
                <div class="mb-2">Internet <span class="float-end">40%</span></div>
                <div class="progress" style="height:6px;"><div class="progress-bar bg-success" style="width:40%"></div></div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('salesChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Sales',
                    data: [120, 190, 300, 250, 220, 320, 210],
                    borderColor: '#1976d2',
                    backgroundColor: 'rgba(25, 118, 210, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: { plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true } } }
        });
        var ctx2 = document.getElementById('revenueChart').getContext('2d');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Youtube', 'Facebook', 'Twitter'],
                datasets: [{
                    data: [40, 35, 25],
                    backgroundColor: ['#dc3545', '#1976d2', '#17a2b8']
                }]
            },
            options: { plugins: { legend: { display: false } } }
        });
    </script>
}
