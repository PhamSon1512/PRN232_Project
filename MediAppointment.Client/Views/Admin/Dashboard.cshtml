@model MediAppointment.Client.Models.Admin.DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-0">

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3"><i class="bi bi-person-fill fs-2 text-primary"></i></div>
                        <div>
                            <div class="fs-5 fw-bold">@Model.TotalDoctors</div>
                            <div class="text-muted">Tổng số Bác sĩ</div>
                            <div class="text-primary small">Bác sĩ đang hoạt động</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3"><i class="bi bi-person-badge fs-2 text-warning"></i></div>
                        <div>
                            <div class="fs-5 fw-bold">@Model.TotalManagers</div>
                            <div class="text-muted">Tổng số Quản lý</div>
                            <div class="text-warning small">Quản lý đang hoạt động</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3"><i class="bi bi-people fs-2 text-success"></i></div>
                        <div>
                            <div class="fs-5 fw-bold">@Model.TotalPatients</div>
                            <div class="text-muted">Tổng số Bệnh nhân</div>
                            <div class="text-success small">Bệnh nhân đã đăng ký</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3"><i class="bi bi-currency-dollar fs-2 text-info"></i></div>
                        <div>
                            <div class="fs-5 fw-bold">@Model.TotalRevenue.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</div>
                            <div class="text-muted">Tổng doanh thu</div>
                            <div class="text-info small">Từ các lịch hẹn đã hoàn thành</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <div class="fw-bold mb-2">Lịch hẹn theo Trạng thái</div>
                    <canvas id="appointmentsChart" height="120"></canvas>
                    <div class="d-flex justify-content-between mt-3">
                        <div>
                            <div class="fw-bold">@Model.TotalAppointments</div>
                            <div class="text-muted small">Tổng số Lịch hẹn</div>
                        </div>
                        <div>
                            <div class="fw-bold">@Model.CompletedAppointments</div>
                            <div class="text-muted small">Đã hoàn thành</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <div class="fw-bold mb-2">Phân bố Trạng thái Lịch hẹn</div>
                    <canvas id="statusChart" height="120"></canvas>
                    <div class="d-flex justify-content-between mt-3">
                        <div class="text-primary small">Đang chờ: @Model.PendingAppointments</div>
                        <div class="text-success small">Đã hoàn thành: @Model.CompletedAppointments</div>
                        <div class="text-danger small">Đã hủy: @Model.CancelledAppointments</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('appointmentsChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Đang chờ', 'Đã hoàn thành', 'Đã hủy'],
                datasets: [{
                    label: 'Lịch hẹn',
                    data: [@Model.PendingAppointments, @Model.CompletedAppointments, @Model.CancelledAppointments],
                    backgroundColor: ['#17a2b8', '#28a745', '#dc3545'],
                    borderColor: ['#17a2b8', '#28a745', '#dc3545'],
                    borderWidth: 1
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true } }
            }
        });

        var ctx2 = document.getElementById('statusChart').getContext('2d');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Đang chờ', 'Đã hoàn thành', 'Đã hủy'],
                datasets: [{
                    data: [@Model.PendingAppointments, @Model.CompletedAppointments, @Model.CancelledAppointments],
                    backgroundColor: ['#17a2b8', '#28a745', '#dc3545']
                }]
            },
            options: { plugins: { legend: { display: false } } }
        });
    </script>
}