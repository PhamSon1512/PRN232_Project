@model MediAppointment.Client.Models.Common.PaginatedResult<MediAppointment.Client.Models.Admin.AdminViewModel>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-0">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <!-- thông báo thành công -->
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- thông báo lỗi-->
    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="mt-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">Danh sách bác sĩ và quản lý</h5>
                <div class="table-responsive">
                    <!-- Thêm table-responsive để tránh tràn -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="min-width: 150px;">Họ và tên</th>
                                <th>Tên đăng nhập</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Vai trò</th>
                                <th>Ngày sinh</th>
                                <th style="min-width: 100px;">Giới tính</th>
                                <th style="min-width: 150px;">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <form asp-action="EditUser" asp-controller="Admin" asp-route-id="@user.Id" method="get">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-link p-0 m-0">@user.FullName</button>
                                        </form>
                                    </td>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.Role</td>
                                    <td>@(user.DateOfBirth == DateTime.MinValue ? "Chưa cập nhật" : user.DateOfBirth.ToString("dd/MM/yyyy"))</td>
                                    <td>@(user.Gender ? "Nam" : "Nữ")</td>
                                    <td class="@(user.IsActive ? "text-success" : "text-danger")">
                                        @(user.IsActive ? "Đang hoạt động" : "Không hoạt động")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Phân trang -->
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("UserManagement", new { page = Model.PageNumber - 1, pageSize = Model.PageSize })">Trước</a>
                            </li>
                        }
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("UserManagement", new { page = i, pageSize = Model.PageSize })">@i</a>
                            </li>
                        }
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("UserManagement", new { page = Model.PageNumber + 1, pageSize = Model.PageSize })">Tiếp</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>