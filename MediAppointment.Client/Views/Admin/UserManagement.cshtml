@model MediAppointment.Client.Models.Common.PaginatedResult<MediAppointment.Client.Models.Doctor.DoctorViewModel>
@{
    ViewData["Title"] = "Quản lý Bác sĩ";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container-fluid p-0">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="mt-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">Danh sách bác sĩ</h5>
                <form asp-action="DoctorManagement" asp-controller="Manager" method="get" class="mb-3">
                    <div class="input-group">
                        <input name="text" class="form-control" placeholder="Tìm kiếm theo tên bác sĩ" value="@ViewBag.Text" />
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                    </div>
                </form>
                <div class="table-responsive">
                    <!-- Thêm table-responsive để tránh tràn -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="min-width: 150px;">Họ và Tên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th style="min-width: 100px;">Giới tính</th>
                                <th>Ngày sinh</th>
                                <th style="min-width: 150px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.Items != null && Model.Items.Any())
                            {
                                foreach (var doctor in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <form asp-action="DoctorDetails" asp-controller="Manager" asp-route-doctorId="@doctor.Id" method="get">
                                                <input type="hidden" name="doctorId" value="@doctor.Id" />
                                                <button type="submit" class="btn btn-link p-0 m-0">@doctor.FullName</button>
                                            </form>
                                        </td>
                                        <td>@doctor.Email</td>
                                        <td>@doctor.PhoneNumber</td>
                                        <td>@doctor.GenderDisplay</td>
                                        <td>@(doctor.DateOfBirth == DateTime.MinValue ? "Chưa cập nhật" : doctor.DateOfBirth.ToString("dd/MM/yyyy"))</td>
                                        <td>
                                            <a asp-action="EditDoctor" asp-controller="Manager" asp-route-doctorId="@doctor.Id" class="btn btn-sm btn-primary">Chỉnh sửa</a>
                                            <form asp-action="DeleteDoctor" asp-controller="Manager" asp-route-doctorId="@doctor.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa bác sĩ này?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">Không có bác sĩ nào</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Phân trang -->
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        @if (Model != null && Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("DoctorManagement", new { text = ViewBag.Text, page = Model.PageNumber - 1, pageSize = Model.PageSize })">Trước</a>
                            </li>
                        }
                        @if (Model != null)
                        {
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("DoctorManagement", new { text = ViewBag.Text, page = i, pageSize = Model.PageSize })">@i</a>
                                </li>
                            }
                        }
                        @if (Model != null && Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("DoctorManagement", new { text = ViewBag.Text, page = Model.PageNumber + 1, pageSize = Model.PageSize })">Tiếp</a>
                            </li>
                        }
                    </ul>
                </nav>
                <a asp-action="CreateDoctor" asp-controller="Manager" class="btn btn-primary mt-3">Tạo bác sĩ mới</a>
            </div>
        </div>
    </div>
</div>