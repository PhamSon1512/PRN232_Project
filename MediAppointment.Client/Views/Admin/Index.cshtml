@model IEnumerable<MediAppointment.Client.Models.UserViewModel>
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card shadow-sm border-0">
    <div class="card-body">
        <h4 class="mb-4">Quản lý người dùng</h4>
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Điện thoại</th>
                    <th>Ngày sinh</th>
                    <th>Trạng thái</th>
                    <th>Role</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.DateOfBirth.ToShortDateString()</td>
                        <td>@user.Status</td>
                        <td>@user.Role</td>
                        <td>
                            @if (user.Status == "Active")
                            {
                                <a asp-action="UpdateUserStatus" asp-route-id="@user.Id" asp-route-status="Inactive" class="btn btn-warning btn-sm">Inactive</a>
                            }
                            else if (user.Status == "Inactive")
                            {
                                <a asp-action="UpdateUserStatus" asp-route-id="@user.Id" asp-route-status="Active" class="btn btn-success btn-sm">Active</a>
                            }
                            else if (user.Status == "Deleted")
                            {
                                <span class="badge bg-danger">Deleted</span>
                            }
                            @if (user.Role == "Manager" || user.Role == "Doctor")
                            {
                                <form asp-action="UpdateUserRole" method="post" style="display:inline">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <select name="newRole" class="form-select form-select-sm d-inline w-auto">
                                        <option value="Manager" selected="@(user.Role=="Manager"?"selected":null)">Manager</option>
                                        <option value="Doctor" selected="@(user.Role=="Doctor"?"selected":null)">Doctor</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary btn-sm">Đổi role</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
