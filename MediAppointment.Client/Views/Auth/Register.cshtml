@model MediAppointment.Client.Models.Auth.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-user-plus text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-2">Đăng ký tài khoản</h3>
                    <p class="text-muted">Tạo tài khoản mới để sử dụng dịch vụ</p>
                </div>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FullName" class="form-label">
                                <i class="fas fa-user me-1"></i>Họ và tên
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>Email
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label">
                                <i class="fas fa-phone me-1"></i>Số điện thoại
                            </label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DateOfBirth" class="form-label">
                                <i class="fas fa-calendar me-1"></i>Ngày sinh
                            </label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Gender" class="form-label">
                                <i class="fas fa-venus-mars me-1"></i>Giới tính
                            </label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">Chọn giới tính</option>
                                <option value="true">Nam</option>
                                <option value="false">Nữ</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Role" class="form-label">
                                <i class="fas fa-user-tag me-1"></i>Đăng ký là
                            </label>
                            <select asp-for="Role" class="form-select">
                                <option value="Patient">Bệnh nhân</option>
                                <option value="Doctor">Bác sĩ</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Patient specific fields -->
                    <div id="patientFields">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CCCD" class="form-label">
                                    <i class="fas fa-id-card me-1"></i>Số CCCD
                                </label>
                                <input asp-for="CCCD" class="form-control" placeholder="Nhập số CCCD" />
                                <span asp-validation-for="CCCD" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="BHYT" class="form-label">
                                    <i class="fas fa-credit-card me-1"></i>Số BHYT
                                </label>
                                <input asp-for="BHYT" class="form-control" placeholder="Nhập số BHYT" />
                                <span asp-validation-for="BHYT" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>Địa chỉ
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="2" placeholder="Nhập địa chỉ"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-1"></i>Mật khẩu
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i>Xác nhận mật khẩu
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-plus me-1"></i>Đăng ký
                        </button>
                    </div>

                    <div class="text-center">
                        <p>Đã có tài khoản? 
                            <a asp-action="Login" class="text-decoration-none">Đăng nhập ngay</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            function togglePatientFields() {
                if ($('#Role').val() === 'Patient') {
                    $('#patientFields').show();
                } else {
                    $('#patientFields').hide();
                }
            }

            $('#Role').change(togglePatientFields);
            togglePatientFields(); // Initial call
        });
    </script>
}
