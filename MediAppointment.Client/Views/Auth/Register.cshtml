@model MediAppointment.Client.Models.Auth.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-5">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-plus" style="font-size: 2rem; color: #6a11cb;"></i>
                        <h4 class="fw-semibold mt-2">Tạo tài khoản mới</h4>
                        <p class="text-muted mb-0 small">Hãy điền thông tin bên dưới để bắt đầu</p>
                    </div>

                    <form asp-action="Register" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                        <!-- Tên + Email -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label small">Họ và tên</label>
                                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label small">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="example@gmail.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Phone + DOB -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label small">Số điện thoại</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label small">Ngày sinh</label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Gender + Address -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
<label asp-for="Gender" class="form-label small">Giới tính</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="true">Nam</option>
                                    <option value="false">Nữ</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Address" class="form-label small">Địa chỉ</label>
                                <input asp-for="Address" class="form-control" placeholder="Số nhà, đường, quận..." />
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label small">Mật khẩu</label>
                                <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label small">Xác nhận mật khẩu</label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid mb-3 mt-4">
                            <button type="submit" class="btn btn-primary btn-md rounded-pill">
                                <i class="fas fa-user-plus me-2"></i> Đăng ký ngay
                            </button>
                        </div>

                        <!-- Link login -->
                        <div class="text-center">
                            <p class="mb-0 text-muted small">
                                Đã có tài khoản?
                                <a asp-action="Login" class="text-decoration-none fw-semibold">Đăng nhập</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}