@model MediAppointment.Client.Models.Doctor.DoctorStatusModel
@{
    ViewData["Title"] = "Chi tiết Bác sĩ";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";

    string GetStatusDisplay(int status) => status switch
    {
        0 => "Inactive",
        1 => "Active",
        2 => "Pending",
        3 => "Deleted",
        _ => "Unknown"
    };
}

<div class="container mt-4">
    <h2 class="mb-4">Chi tiết Bác sĩ</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title">@Model.FullName</h3>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
            <p><strong>Giới tính:</strong> @Model.GenderDisplay</p>
            <p><strong>Ngày sinh:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
            <p><strong>Trạng thái hoạt động:</strong> @GetStatusDisplay(Model.Status)</p>
            <p>
                <strong>Khoa đang hoạt động:</strong>
                @if (Model.Departments != null && Model.Departments.Any())
                {
                    <ul>
                        @foreach (var department in Model.Departments)
                        {
                            <li>@department</li>
                        }
                    </ul>
                }
                else
                {
                    <span>Chưa được gán khoa</span>
                }
            </p>
            <a asp-action="EditDoctor" asp-controller="Manager" asp-route-doctorId="@Model.Id" class="btn btn-primary">Chỉnh sửa</a>
            <form asp-action="DeleteDoctor" asp-controller="Manager" asp-route-doctorId="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa bác sĩ này?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger ms-2">Xóa</button>
            </form>
            <a asp-action="DoctorManagement" asp-controller="Manager" class="btn btn-secondary ms-2">Quay lại</a>
        </div>
    </div>
</div>