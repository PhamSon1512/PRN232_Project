@model MediAppointment.Client.Models.Doctor.DoctorUpdateModel
@{
    ViewData["Title"] = "Chỉnh sửa Bác sĩ";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Chỉnh sửa Bác sĩ</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="UpdateDoctor" asp-controller="Manager" method="post" id="editDoctorForm">
                <input type="hidden" asp-for="Status" />
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Họ và Tên</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Departments" class="form-label">Khoa</label>
                    <select asp-for="Departments" class="form-control" multiple>
                        @foreach (var dept in ViewBag.Departments as List<MediAppointment.Client.Models.Appointment.DepartmentOption>)
                        {
                            <option value="@dept.Id" selected="@(Model.Departments.Contains(dept.Id))">@dept.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Departments" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a asp-action="DoctorDetails" asp-controller="Manager" asp-route-doctorId="@ViewBag.DoctorId" class="btn btn-secondary ms-2">Hủy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}